input {
  display: block;
  border: 1px solid #ccc;
  height: 40px;
  margin: 10px;position: relative;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 20;
}

.box {
  width: 300px;
  height: 150px;
  background-color: #fff;
  margin: 30px auto;
  border-radius: 4px;
  overflow: hidden;
}

.fl {
  margin-top: 30px;
  float: left;
}

.fr {
  margin-top: 30px;
  float: right;
}
